<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Employee System</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<style>
body { padding: 20px; background: #f9f9f9; }
h1 { text-align: center; margin-bottom: 20px; }
table { margin-top: 20px; }
.expired { background-color: #f8d7da !important; } /* أحمر */
.warning { background-color: #fff3cd !important; } /* أصفر */
</style>
</head>
<body>
<div class="container">
<h1>Employee System</h1>

<!-- Filters -->
<div class="row mb-3">
  <div class="col">
    <input type="text" id="filterCompany" class="form-control" placeholder="Filter by Company">
  </div>
  <div class="col">
    <input type="text" id="filterEmployee" class="form-control" placeholder="Filter by Employee">
  </div>
  <div class="col">
    <input type="text" id="filterDocument" class="form-control" placeholder="Filter by Document">
  </div>
</div>

<table class="table table-bordered" id="employeeTable">
<thead>
<tr>
<th>Company</th>
<th>Employee</th>
<th>Document</th>
<th>Expiry Date</th>
<th>Days Remaining</th>
</tr>
</thead>
<tbody>
<% companies.forEach(c => { 
  c.employees.forEach(e => {
    e.documents.forEach(d => {
      const daysRemaining = Math.floor((new Date(d.expiryDate) - new Date())/(1000*60*60*24));
%>
<tr class="<%= daysRemaining < 0 ? 'expired' : daysRemaining <= 30 ? 'warning' : '' %>">
  <td><%= c.name %></td>
  <td><%= e.fullName %></td>
  <td><%= d.name %></td>
  <td><%= d.expiryDate %></td>
  <td><%= daysRemaining %></td>
</tr>
<% }) }) }) %>
</tbody>
</table>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
// Filter function
$('#filterCompany, #filterEmployee, #filterDocument').on('keyup', function() {
  const companyVal = $('#filterCompany').val().toLowerCase();
  const employeeVal = $('#filterEmployee').val().toLowerCase();
  const docVal = $('#filterDocument').val().toLowerCase();

  $('#employeeTable tbody tr').each(function() {
    const tds = $(this).find('td');
    const companyText = tds.eq(0).text().toLowerCase();
    const employeeText = tds.eq(1).text().toLowerCase();
    const docText = tds.eq(2).text().toLowerCase();

    if (companyText.includes(companyVal) && employeeText.includes(employeeVal) && docText.includes(docVal)) {
      $(this).show();
    } else {
      $(this).hide();
    }
  });
});
</script>
</body>
</html>
