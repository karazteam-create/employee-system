<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Company & Employee Management</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body { padding: 20px; background: #f9f9f9; }
        h1 { text-align: center; margin-bottom: 30px; }
        .alert { color: red; font-weight: bold; }
        .filter-container { margin-bottom: 20px; }
        .filter-container select { margin-right: 15px; }
    </style>
</head>
<body>
<h1>Company & Employee Management</h1>

<div class="container">

    <!-- الفلاتر -->
    <div class="filter-container">
        <label>Company:
            <select id="filter-company">
                <option value="">All</option>
                <% companies.forEach(c => { %>
                    <option value="<%= c.name %>"><%= c.name %></option>
                <% }) %>
            </select>
        </label>
        <label>Employee:
            <select id="filter-employee">
                <option value="">All</option>
                <% companies.forEach(c => {
                    c.employees.forEach(emp => { %>
                        <option value="<%= emp.fullName %>"><%= emp.fullName %></option>
                <% }) }) %>
            </select>
        </label>
        <label>Document:
            <select id="filter-document">
                <option value="">All</option>
                <% 
                let docNames = new Set();
                companies.forEach(c => {
                    c.employees.forEach(emp => {
                        emp.documents.forEach(doc => docNames.add(doc.name));
                    });
                });
                Array.from(docNames).forEach(name => { %>
                    <option value="<%= name %>"><%= name %></option>
                <% }) %>
            </select>
        </label>
    </div>

    <% companies.forEach(company => { %>
        <h2 class="mt-4">
            <%= company.name %> 
            (Number of Employees: <%= company.employees.length %>)
        </h2>
        <table class="table table-striped table-bordered employee-table">
            <thead class="table-dark">
                <tr>
                    <th>Company</th>
                    <th>Full Name</th>
                    <th>ID Number</th>
                    <th>Passport Number</th>
                    <th>Work Card Number</th>
                    <th>Personal Number</th>
                    <th>Unified Number</th>
                    <th>Visa Number</th>
                    <th>Document Name</th>
                    <th>Issue Date</th>
                    <th>Expiry Date</th>
                    <th>Days Remaining</th>
                    <th>Expiring Soon</th>
                </tr>
            </thead>
            <tbody>
                <% company.employees.forEach(emp => { %>
                    <% emp.documents.forEach(doc => { %>
                        <tr>
                            <td><%= company.name %></td>
                            <td><%= emp.fullName %></td>
                            <td><%= emp.idNumber %></td>
                            <td><%= emp.passportNumber %></td>
                            <td><%= emp.workCardNumber %></td>
                            <td><%= emp.personalNumber %></td>
                            <td><%= emp.unifiedNumber %></td>
                            <td><%= emp.visaNumber %></td>
                            <td><%= doc.name %></td>
                            <td><%= doc.issueDate %></td>
                            <td><%= doc.expiryDate %></td>
                            <td><%= doc.daysRemaining %></td>
                            <td>
                                <% if(doc.expiringSoon){ %>
                                    <span class="alert">⚠ Expiring Soon</span>
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                <% }) %>
            </tbody>
        </table>
    <% }) %>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
$(document).ready(function() {
    // تفعيل DataTable
    var table = $('.employee-table').DataTable({
        paging: true,
        searching: true,
        ordering: true,
        pageLength: 10,
        lengthChange: true
    });

    // فلترة حسب القيم المختارة
    $('#filter-company').on('change', function() {
        table.column(0).search(this.value).draw();
    });
    $('#filter-employee').on('change', function() {
        table.column(1).search(this.value).draw();
    });
    $('#filter-document').on('change', function() {
        table.column(8).search(this.value).draw();
    });
});
</script>
</body>
</html>
