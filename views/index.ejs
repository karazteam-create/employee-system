<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Company & Employee Management</title>
    <style>
        body { font-family: Arial; margin: 40px; background: #f9f9f9; }
        h1 { text-align: center; color: #333; }
        table { width: 90%; margin: 20px auto; border-collapse: collapse; background: #fff; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
        th, td { border: 1px solid #aaa; padding: 10px; text-align: left; }
        th { background: #4CAF50; color: white; }
        tr:nth-child(even) { background: #f2f2f2; }
        tr:hover { background: #ddd; }
        h2 { margin-left: 5%; }
        .alert { color: red; font-weight: bold; }
    </style>
</head>
<body>
<h1>Company & Employee Management</h1>

<% companies.forEach(company => { %>
    <h2>
        <%= company.name %> 
        (Number of Employees: <%= company.employees.length %>)
    </h2>
    <table>
        <thead>
            <tr>
                <th>Full Name</th>
                <th>ID Number</th>
                <th>Passport Number</th>
                <th>Work Card Number</th>
                <th>Personal Number</th>
                <th>Unified Number</th>
                <th>Visa Number</th>
                <th>Document Name</th>
                <th>Issue Date</th>
                <th>Expiry Date</th>
                <th>Days Remaining</th>
                <th>Expiring Soon</th>
            </tr>
        </thead>
        <tbody>
            <% company.employees.forEach(emp => { %>
                <% emp.documents.forEach(doc => { %>
                    <tr>
                        <td><%= emp.fullName %></td>
                        <td><%= emp.idNumber %></td>
                        <td><%= emp.passportNumber %></td>
                        <td><%= emp.workCardNumber %></td>
                        <td><%= emp.personalNumber %></td>
                        <td><%= emp.unifiedNumber %></td>
                        <td><%= emp.visaNumber %></td>
                        <td><%= doc.name %></td>
                        <td><%= doc.issueDate %></td>
                        <td><%= doc.expiryDate %></td>
                        <td><%= doc.daysRemaining %></td>
                        <td>
                            <% if(doc.expiringSoon){ %>
                                <span class="alert">âš  Expiring Soon</span>
                            <% } else { %>
                                -
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            <% }) %>
        </tbody>
    </table>
<% }) %>
</body>
</html>
